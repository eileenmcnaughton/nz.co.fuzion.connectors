    <add>1.0</add>
  </field>
  <field>
    <name>description</name>
    <type>varchar</type>
    <length>255</length>
    <comment>Connector Type description (default for creating a new connector)</comment>
    <add>1.0</add>
  </field>
  <field>
    <name>is_active</name>
    <type>boolean</type>
    <comment>Is this the default connector of this type for this domain?</comment>
